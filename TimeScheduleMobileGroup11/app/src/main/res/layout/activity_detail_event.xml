<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">
        <ImageView
            android:id="@+id/imvPhotoEvent"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/back_40"
            android:padding="5dp"
            android:layout_gravity="start"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký sự kiện"
                android:textColor="@color/background"
                android:backgroundTint="#FFFFFF"
                app:strokeColor="@color/background"
                app:strokeWidth="3dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tvTitleEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đây là tiêu đề sự kiện"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ngày ra mắt sự kiện"
        android:layout_marginStart="20dp"
        android:paddingBottom="5dp"/>


    <ImageView
        android:id="@+id/imv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đây là nội dung sự kiện"
        android:paddingTop="10dp"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đặt câu hỏi về sự kiện"
        android:textSize="20sp"
        android:textColor="@color/black"
        />






</LinearLayout>